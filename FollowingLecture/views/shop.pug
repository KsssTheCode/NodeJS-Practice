extends layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        if prods.length > 0
            //div의 경우 자동으로 간주되기 때문에 div를 붙일필요가 없음
            .gird
                .card.product-item
                    each product in prods
                        header.card__header
                            h1.product__title #{product.title}
                        .card__image 
                            img(src="https://media.gettyimages.com/id/157482029/photo/stack-of-books.jpg?s=1024x1024&w=gi&k=20&c=LBkfIEzmAzb8Dt7u1Yo0U_TX0d4YWoGexSscX71Z5Ng=",alt="A Book",style="width:300px;height:300px;")
                        .card_content 
                            h2.product__price $19.99
                            p.product_description A Very interesting book about so many even more interesintg things! 
                    .card__actions
                        button.btn Add to Cart
        else 
            h1 No Products